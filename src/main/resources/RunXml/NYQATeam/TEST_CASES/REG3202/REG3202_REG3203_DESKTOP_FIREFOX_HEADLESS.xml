<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite allow-return-values="true" name="GrimlockAutomation" parallel="tests" thread-count="10">
    <!--for web testing-->
    <test name="REG3202: Desktop - JW Player/Chrome">
    <parameter name="website" value="FireFoxHeadlessLocal"/>
    <parameter name="web_object_to_test" value="jwplayer"/>
    <parameter name="is_local" value="true"/>
    <parameter name="is_mobile" value="false"/>
    <parameter name="network_sniffer" value="Website"/>
        <parameter name="test_name" value="REG3202 - Asset Type: Simple Video  - Mime Type/API Framework: video/mp4  - Platform: OSX  - Browser: Firefox"/>
    <groups>
            <run>
                <include name="REG3202"/>
            </run>
        </groups>
        <packages>
            <package name=".*"/>
        </packages>
    </test>


    <test name="REG3203: Desktop - JW Player/Chrome">
        <parameter name="website" value="FireFoxHeadlessLocal"/>
        <parameter name="web_object_to_test" value="jwplayer"/>
