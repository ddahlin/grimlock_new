        <parameter name="network_sniffer" value="Website"/>
        <parameter name="test_name" value="REG3203 - Asset Type: Simple Video  - Mime Type/API Framework: video/mp4  - Platform: OSX  - Browser: Firefox"/>
        <groups>
            <run>
